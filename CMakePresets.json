{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-msvc",
      "hidden": true,
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": ["Windows"]
        }
      }
    },
    {
      "name": "windows-msvc-debug",
      "displayName": "Windows MSVC Debug",
      "description": "Debug build using MSVC compiler",
      "inherits": "windows-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TRC_ENABLED": "ON",
        "TRC_DOUBLE_BUFFER": "OFF"
      }
    },
    {
      "name": "windows-msvc-release",
      "displayName": "Windows MSVC Release",
      "description": "Release build using MSVC compiler",
      "inherits": "windows-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "TRC_ENABLED": "ON",
        "TRC_DOUBLE_BUFFER": "OFF"
      }
    },
    {
      "name": "windows-msvc-release-doublebuf",
      "displayName": "Windows MSVC Release (Double-Buffer)",
      "description": "Release build with double-buffering enabled",
      "inherits": "windows-msvc-release",
      "cacheVariables": {
        "TRC_DOUBLE_BUFFER": "ON"
      }
    },
    {
      "name": "windows-clang",
      "hidden": true,
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "windows-clang-debug",
      "displayName": "Windows Clang Debug",
      "description": "Debug build using Clang compiler",
      "inherits": "windows-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TRC_ENABLED": "ON",
        "TRC_DOUBLE_BUFFER": "OFF"
      }
    },
    {
      "name": "windows-clang-release",
      "displayName": "Windows Clang Release",
      "description": "Release build using Clang compiler",
      "inherits": "windows-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "TRC_ENABLED": "ON",
        "TRC_DOUBLE_BUFFER": "OFF"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-gcc",
      "hidden": true,
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "linux-gcc-debug",
      "displayName": "Linux GCC Debug",
      "description": "Debug build using GCC compiler",
      "inherits": "linux-gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TRC_ENABLED": "ON",
        "TRC_DOUBLE_BUFFER": "OFF"
      }
    },
    {
      "name": "linux-gcc-release",
      "displayName": "Linux GCC Release",
      "description": "Release build using GCC compiler",
      "inherits": "linux-gcc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "TRC_ENABLED": "ON",
        "TRC_DOUBLE_BUFFER": "OFF"
      }
    },
    {
      "name": "linux-clang",
      "hidden": true,
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "linux-clang-debug",
      "displayName": "Linux Clang Debug",
      "description": "Debug build using Clang compiler",
      "inherits": "linux-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TRC_ENABLED": "ON",
        "TRC_DOUBLE_BUFFER": "OFF"
      }
    },
    {
      "name": "linux-clang-release",
      "displayName": "Linux Clang Release",
      "description": "Release build using Clang compiler",
      "inherits": "linux-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "TRC_ENABLED": "ON",
        "TRC_DOUBLE_BUFFER": "OFF"
      }
    },
    {
      "name": "macos-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-clang",
      "hidden": true,
      "inherits": "macos-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "macos-clang-debug",
      "displayName": "macOS Clang Debug",
      "description": "Debug build using Clang compiler",
      "inherits": "macos-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "TRC_ENABLED": "ON",
        "TRC_DOUBLE_BUFFER": "OFF"
      }
    },
    {
      "name": "macos-clang-release",
      "displayName": "macOS Clang Release",
      "description": "Release build using Clang compiler",
      "inherits": "macos-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "TRC_ENABLED": "ON",
        "TRC_DOUBLE_BUFFER": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
